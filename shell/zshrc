# DWM shell profile (Hypr-like)

export ZSH="$HOME/.oh-my-zsh"

if [[ -f "$HOME/.oh-my-zsh/themes/agnosterzak.zsh-theme" ]]; then
  ZSH_THEME="agnosterzak"
else
  ZSH_THEME="agnoster"
fi

plugins=(
  git
  archlinux
)

if [[ "${DWM_ZSH_HEAVY_PLUGINS:-0}" == "1" ]]; then
  plugins+=(
    zsh-autosuggestions
    zsh-syntax-highlighting
  )
fi

if [[ -f "$ZSH/oh-my-zsh.sh" ]]; then
  source "$ZSH/oh-my-zsh.sh"
fi

# Optional terminal banner. Disabled by default to keep shell startup fast.
if [[ "${DWM_SHOW_SHELL_BANNER:-0}" == "1" ]]; then
  if command -v pokemon-colorscripts >/dev/null 2>&1 && command -v fastfetch >/dev/null 2>&1; then
    pokemon-colorscripts --no-title -s -r | fastfetch -c "$HOME/.config/fastfetch/config-pokemon.jsonc" --logo-type file-raw --logo-height 10 --logo-width 5 --logo -
  elif command -v fastfetch >/dev/null 2>&1; then
    fastfetch
  fi
fi

if command -v lsd >/dev/null 2>&1; then
  alias ls='lsd'
  alias l='ls -l'
  alias la='ls -a'
  alias lla='ls -la'
  alias lt='ls --tree'
fi

if command -v fzf >/dev/null 2>&1; then
  source <(fzf --zsh)
fi

HISTFILE="$HOME/.zsh_history"
HISTSIZE=10000
SAVEHIST=10000
setopt appendhistory
